@page
@model BugTrackerApi.Pages.AddBugModel

<div class="container mt-3">
    <h1 class="title">Add Bug</h1>
    <div asp-validation-summary="All"></div> <!--what is this??-->
    <form method="POST"> <!--pritends post http method-->
        <div class="field">
            <label class="label">Title</label>
            <div class="control">
                <input class="input" type="text" placeholder="Text input" asp-for="Bug.Title"> <!-- asp-for??-->
            </div>
        </div>
        <div class="field">
            <label class="label">Priority (Choose priority)</label>
            <div class="control">
                <!--<textarea class="input" placeholder="Text input" rows="5" asp-for="Bug.Priority"></textarea>-->
                <input name="priority" type="radio" value="Critical" asp-for="Bug.Priority" />
                <label>Critical</label>
                <input class="ml-5" name="priority" type="radio" value="High" asp-for="Bug.Priority" />
                <label>High</label>
                <input class="ml-5" name="priority" type="radio" value="Medium" asp-for="Bug.Priority" />
                <label>Medium</label>
                <input class="ml-5" name="priority" type="radio" value="Low" asp-for="Bug.Priority" />
                <label>Low</label>
            </div>
        </div>
        <div class="field">
            <label class="label">Description</label>
            <div class="control">
                <textarea class="input" placeholder="Text input" rows="5" asp-for="Bug.Description"></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">Repro Steps</label>
            <div class="control">
                <textarea class="input" placeholder="Text input" rows="5" asp-for="Bug.ReproSteps"></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">ActualResults</label>
            <div class="control">
                <textarea class="input" placeholder="Text input" rows="5" asp-for="Bug.ActualResults"></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">ExpectedResults</label>
            <div class="control">
                <textarea class="input" placeholder="Text input" rows="5" asp-for="Bug.ExpectedResults"></textarea>
            </div>
        </div>
        <div class="buttons">
            <input type="submit" class="button is-primary" value="Save" />
            <a class="button" href="/">Cancel</a>
        </div>
    </form>

</div>