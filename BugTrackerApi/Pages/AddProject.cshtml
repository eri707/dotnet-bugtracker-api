@page
@model BugTrackerApi.Pages.AddProjectModel

<div class="container mt-3">
    <h1 class="title">Add Project</h1>
    <div asp-validation-summary="All"></div>
    <form method="POST"> <!--pretend post http method-->
        <div class="field">
            <label class="label">Name</label>
            <div class="control">
                <!--asp-for binds to the model property and it generates the HTML based on the type, name and data annotations of the model property.-->
                <input class="input" type="text" placeholder="Text input" asp-for="Project.Name"> 
            </div>
        </div>
        <div class="field">
            <label class="label">Description</label>
            <div class="control">
                <textarea class="input" placeholder="Text input" rows="5" asp-for="Project.Description"></textarea>
            </div>
        </div>
        <div class="buttons">
            <input type="submit" class="button is-primary" value="Save" />
            <a class="button" href="/">Cancel</a>
        </div>
    </form>
</div>