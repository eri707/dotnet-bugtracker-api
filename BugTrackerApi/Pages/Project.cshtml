@page "/projects/{id}"
@model BugTrackerApi.Pages.ProjectModel 


<div class="container">
    <header class="is-flex is-justify-content-space-between is-align-items-center">
        <h1 class="title mt-3">@Model.Project?.Name</h1>
        <a class="button" href="/projects/@Model.Project?.Id/edit">Edit project</a>
    </header>

    <p>@Model.Project?.Description</p>
    <div class="is-flex is-justify-content-space-between">
        <h4 class="is-size-4 mt-4">Bugs</h4>
        <a class="button" href="/AddBug?projectId=@Model.Project?.Id">Add bug</a>  <!--This is qury parameters-->
    </div>

    @foreach (var bug in Model.Bugs)
    {
        <div class="card p-4 mb-2 is-flex-direction-row" x-data="{ open: false }">
            <div class="is-flex is-justify-content-space-between">
                <a class="is-size-5" @@click="open = ! open">@bug.Title</a>
                <div  class="is-flex">
                    <a class="button" href="/bugs/@bug.Id">Edit</a>
                    <form method="POST"> <!--pretend like delete http method-->
                        <input type="submit" class="button ml-3" asp-page-handler="Delete" value="Delete" asp-route-id="@bug.Id" />
                    </form>
                </div>
                
            </div>
            <div>
                <div x-show="open" @@click.outside="open = false">
                    <p><strong>Created On:</strong> @bug.CreatedOn</p>
                    <p class="mt-4"><strong>Description:</strong> </p>
                    <p class="mb-4">@bug.Description</p>
                    <p><strong>Priority:</strong> @bug.Priority</p>
                    <p><strong>Repro Steps:</strong> @bug.ReproSteps</p>
                    <table class="table is-bordered  mt-4 is-fullwidth">
                        <thead>
                            <tr>
                                <th>ExpectedResults</th>
                                <th>ActualResults</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@bug.ExpectedResults</td>
                                <td>@bug.ActualResults</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>